generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  email    String  @unique
  password String
  name     String? @default("user")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // favorites 

  @@map("user")
}

model Genre {
  id String @id @default(cuid())

  title       String
  description String

  slug String @unique

  @@map("genre")
}

model Actor {
  id String @id @default(cuid())

  name  String
  slug  String @unique
  photo String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("actor")
}
